function modTick()
{
if(Diz)
{
tick++;
}
if(tick==1)
{
ModPE.setFov(50)
}
if(tick==3)
{
ModPE.setFov(60)
}
if(tick==5)
{
ModPE.setFov(50)
}
if(tick==7)
{
ModPE.setFov(60)
}
if(tick==9)
{
ModPE.setFov(50)
}
if(tick==11)
{
ModPE.setFov(60)
}
if(tick==13)
{
ModPE.setFov(50)
}
if(tick==15)
{
ModPE.setFov(60)
}
if(tick==17)
{
ModPE.setFov(50)
}
if(tick==19)
{
ModPE.setFov(70)
Diz=false
}
}
